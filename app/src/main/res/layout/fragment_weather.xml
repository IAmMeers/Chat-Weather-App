<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_weather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.WeatherFragment">


    <TextView
        android:id="@+id/edit_location"
        android:layout_width="338dp"
        android:layout_height="34dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="334dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:checkedButton="@id/button_view_today"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_location">

        <RadioButton
            android:id="@+id/button_view_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/radio_weather_selector"
            android:button="@android:color/transparent"
            android:text="Today"
            android:textAlignment="center"
            android:textColor="@drawable/text_weather_color" />

        <RadioButton
            android:id="@+id/button_view_24hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/radio_weather_selector"
            android:button="@android:color/transparent"
            android:text="24 Hour"
            android:textAlignment="center"
            android:textColor="@drawable/text_weather_color" />

        <RadioButton
            android:id="@+id/button_view_10day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/radio_weather_selector"
            android:button="@android:color/transparent"
            android:text="10 Day"
            android:textAlignment="center"
            android:textColor="@drawable/text_weather_color" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>